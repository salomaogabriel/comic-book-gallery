
@{
    ViewData["Title"] = "Detail";
    Layout = null;

    string seriesTitles = "The Amazing Spider-Man";
    int issueNumber = 700;
    string description = "<p>Final issue! Witness the final hours of Doctor Octopus' life and his one, last, great act of revenge! Even if Spider-Man survives... <strong>will Peter Parker?</strong></p>";
    string[] artists = new string[]
    {
        "Script: Dan Slott",
        "Pencils: Humberto Ramos",
        "Inks: Victor Olazaba",
        "Colors: Edgar Delgado",
        "Letters: Chris Eliopoulos"
    };
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ComicBookGallery</title>
</head>
<body>
    <h1>@seriesTitles</h1>
    <h2>Issue #@issueNumber</h2>


    <h5>Description:</h5>
    <div>@Html.Raw(description)</div>

    @if (artists.Length > 0)
    {
        <h5>
            Artists:
        </h5>
        <div>
            <ul>
                @foreach (var artist in artists)
                {
                    <li>@artist</li>
                }

            </ul>
        </div>
    }

</body>
</html>
